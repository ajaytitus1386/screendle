{
	"name": "screendle",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"schedule": "npx tsx scripts/schedule.ts",
		"schedule:remote": "npx tsx scripts/schedule.ts --remote",
		"schedule:apply:local": "npx wrangler d1 execute screendle-db --local --file=scripts/schedule.sql",
		"schedule:apply:remote": "npx wrangler d1 execute screendle-db --file=scripts/schedule.sql",
		"db:migrate:local": "npx wrangler d1 execute screendle-db --local --file=scripts/migrate-schedule.sql",
		"db:migrate:remote": "npx wrangler d1 execute screendle-db --file=scripts/migrate-schedule.sql"
	},
	"devDependencies": {
		"@lucide/svelte": "^0.562.0",
		"@sveltejs/adapter-cloudflare": "^7.2.6",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.18",
		"clsx": "^2.1.1",
		"dotenv": "^17.2.4",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2",
		"tailwindcss": "^4.1.18",
		"tsx": "^4.21.0",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"vite": "^7.2.6",
		"wrangler": "^4.63.0"
	}
}
